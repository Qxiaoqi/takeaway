<!--pages/address/add/add.wxml-->
<view class="container">
  <view class="content">
    <van-toast id="van-toast" />
    <van-cell-group>
      <van-field
        placeholder="请填写收货人姓名"
        label="联系人"
        bind:input="setName"
      />
      <van-field
        placeholder="请填写收货人手机号码"
        label="手机号"
        type="number"
        bind:input="setPhone"
      />
      <van-field
        placeholder="请填写收货地址"
        label="收货地址"
        bind:input="setAddress"
      />
    </van-cell-group>
  </view>
  <view class="submit">
    <van-button type="primary" bindtap="saveAddress" block>保存地址</van-button>
  </view>
</view>