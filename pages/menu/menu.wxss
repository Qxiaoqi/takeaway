/* pages/menu/menu.wxss */
.container {
  padding-bottom: 50px;
  background-color: #ffffff;
}

.header {
  position: relative;
  height: 130px;
}

.header-background {
  height: 80px;
  background-color: #2d8cf0;
}

.header-content {
  position: absolute;
  width: 90%;
  /* top: 20px; */
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 4px;
  box-shadow: 0px 2px 3px #d6d6d6;
  background-color: #ffffff;
}

.tab-content {
  padding-top: 10px;
  background-color: #ffffff;
}

.tab-content .van-card {
  background-color: #ffffff;
}

.plus-left {
  display: inline-block;
}

.operation {
  height: 25px;
  float: right;
}

.number {
  display: inline-block;
  width: 30px;
  font-size: 16px;
  text-align: center;
  /* padding: 0 10px; */
  /* line-height: 20px; */
}

.icon {
  box-sizing: border-box;
  display: inline-block;
  width: 25px;
  height: 25px;
  line-height: 25px;
  text-align: center;
  background-color: #2d8cf0;
  color: #ffffff;
  border-radius: 50%;
  font-size: 20px;
}
